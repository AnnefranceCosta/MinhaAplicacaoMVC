@model MinhaAplicacaoMvc.Models.Cliente

@{
    ViewData["Title"] = Model.ClienteId == 0 ? "Cadastrar Cliente" : "Editar Cliente";
    var produtos = ViewBag.Produtos as List<MinhaAplicacaoMvc.Models.Produto>;
    var vendedores = ViewBag.Vendedores as List<string>;
}

<h2>@ViewData["Title"]</h2>

<form asp-action="@(Model.ClienteId == 0 ? "Create" : "Edit")" method="post">
    @if (Model.ClienteId != 0)
    {
        <input type="hidden" asp-for="ClienteId" />
    }

    <div class="mb-3">
        <label asp-for="NomeCompleto" class="form-label"></label>
        <input asp-for="NomeCompleto" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Telefone" class="form-label"></label>
        <input asp-for="Telefone" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Desconto" class="form-label"></label>
        <input asp-for="Desconto" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Vendedor" class="form-label">Vendedor</label>
        <select asp-for="Vendedor" class="form-select">
            @foreach (var v in vendedores)
            {
                <option value="@v" selected="@(Model.Vendedor == v)">@v</option>
            }
        </select>
    </div>

    <div class="mb-3">
        <label asp-for="ProdutoId" class="form-label">Produto</label>
        <select asp-for="ProdutoId" class="form-select">
            @foreach (var p in produtos)
            {
                <option value="@p.ProdutoId" selected="@(Model.ProdutoId == p.ProdutoId)">
                    @p.Nome
                </option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary btn-success">Salvar</button>
    <a class="btn btn-danger" asp-action="Index">Cancelar</a>
</form>
